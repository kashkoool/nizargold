{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://nizargold-production.up.railway.app/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_API_URL": "https://nizargold-production.up.railway.app",
    "REACT_APP_BACKEND_URL": "https://nizargold-production.up.railway.app"
  },
  "build": {
    "env": {
      "CI": "false"
    }
  }
}

